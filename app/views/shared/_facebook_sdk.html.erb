<div id="fb-root"></div>
<script>
  window.fbAsyncInit = function() {
    // init the FB JS SDK
    FB.init({
      appId      : '495902587107658', // App ID from the App Dashboard
      channelUrl : '//redface.herokuapp.com/channel.html', // Channel File for x-domain communication
      status     : true, // check the login status upon init?
      cookie     : true, // set sessions cookies to allow your server to access the session?
      xfbml      : true  // parse XFBML tags on this page?
    });

    var Redface = {};

    FB.login(function(response) {
      if (response.authResponse) {
        Redface.loginResponse = response;
        Redface.viewerFbuid = response.authResponse.userID;
        $('#fb-login-wrapper').hide();
        loadStream();
      } else {
        console.log('There was a problem: ', response);
      }
    }, {scope: 'read_stream'});

    function loadStream() {
      console.log('enter loadStream');
      $.ajax({
        url : '/stories?fbuid=' + Redface.viewerFbuid,
        dataType : 'json',
        complete : function(resp) {
          var respJson = JSON.parse(resp.responseText);
          $('#content').append(respJson.html);
          // only refresh if the page is empty
          importStream(respJson.count == 0);
        }
      });
    }

    function importStream(refresh) {
      $.ajax({
        url      : '/import',
        data     : Redface.loginResponse,
        dataType : 'json',
        complete  : function(resp) {
          console.log("finished importStream");
        }
      });
    }
  };

  // Load the SDK's source Asynchronously
  (function(d, debug){
     var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement('script'); js.id = id; js.async = true;
     js.src = "//connect.facebook.net/en_US/all" + (debug ? "/debug" : "") + ".js";
     ref.parentNode.insertBefore(js, ref);
   }(document, /*debug*/ false));
</script>
